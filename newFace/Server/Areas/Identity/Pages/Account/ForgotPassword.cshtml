@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "فراموشی کلمه عبور؟";
}
<div class="wrapper">
    <div class="login-page-bg">
        <div class="login-page-bg-2">
            <div class="container">
                <div class="row no-gutters login-page align-content-center">
                    <div class="col-12 col-lg-6 p-4 login-right mx-auto rounded">
                        <div class="logo-login text-center mt-5">
                            <img src="~/img/Logo.png" class="img-fluid" alt="">
                        </div>
                        <h1 class="login-welcome-text h3 mt-4 text-center">بازیابی کلمه عبور</h1>

                        <!--======================ForgotPassword Form========================-->
                        <form method="post">

                            <div class="">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            </div>

                            <div class="input-group mt-5 px-4">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-mobile-alt"></i></div>
                                </div>
                                <input asp-for="Input.phoneNumber" class="form-control" placeholder = "شماره موبایلی که هنگام ثبت نام وارد کرده اید را وارد کنید:"/>

                                <div class="col-12">
                                    <span asp-validation-for="Input.phoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-success px-4 mt-4" value="Submit">ارسال رمز</button>
                                </div>
                            </div>
                        </form>
                        <!--======================End ForgotPassword Form========================-->
                    </div>
                  
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
