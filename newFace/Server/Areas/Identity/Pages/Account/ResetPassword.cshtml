@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "تنظیم مجدد کلمه عبور";
}

<div class="wrapper">
    <div class="login-page-bg">
        <div class="login-page-bg-2">
            <div class="container">
                <div class="row no-gutters login-page align-content-center">
                    <div class="col-lg-6 col-12 mx-auto px-4 login-right rounded">
                        <div class="logo-login text-center mt-5">
                            <img src="~/img/Logo.png" class="img-fluid" alt="" />
                        </div>
                        <h1 class="login-welcome-text h3 mt-4 text-center"> @ViewData["Title"]</h1>

                        <!--======================ForgotPassword Form========================-->
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            @if (ViewData["message"]!=null)
                            {
                            <span class="badge badge-danger" style="width:100%">@ViewData["message"]</span>
                            }
                            <input asp-for="Input.Code" type="hidden" />
                            @if (!String.IsNullOrEmpty(Model.Input.PhoneNumber))
                            {
                                <input asp-for="Input.PhoneNumber" type="hidden" />

                            }
                            else
                            {
                                <div class="input-group mt-5 px-4">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-mobile-alt"></i></div>
                                    </div>
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="شماره همراه:" />
                                    <div class="col-12">
                                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            }

                            <div class="input-group mt-5 px-4">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                                </div>
                                <input asp-for="Input.Password" class="form-control" placeholder="کلمه عبور :" />
                                <div class="col-12">
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="input-group mt-5 px-4">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                                </div>
                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="تایید کلمه عبور:" />
                                <div class="col-12">
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-info m-3 px-5 offset-3" value="Submit">تایید</button>
                                </div>
                            </div>
                        </form>
                        <!--======================End ForgotPassword Form========================-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
